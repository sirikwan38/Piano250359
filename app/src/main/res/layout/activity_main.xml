<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ice_pbru.khamhor.sirikwan.piano.MainActivity"
    android:background="@drawable/bg500">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="PIANO"
            android:id="@+id/textView"
            android:textSize="90dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="#000000"
            android:background="@drawable/bg1 (2)"
            android:textIsSelectable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="940dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#f06c6c"
                android:allowUndo="true"
                android:focusable="false"
                android:id="@+id/button1"
                android:text="do" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:singleLine="false"
                android:background="#ed8448"
                android:text="re" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#8bef39"
                android:id="@+id/Button3"
                android:text="mi" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:background="#39f6c4" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:background="#257ef9" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button6"
                android:background="#7d54f8" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:background="#f573d9" />

            <Button
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:background="#f6305e" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
